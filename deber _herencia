class persona:
    nombre        = str
    edad          = int
    centroEstudio = str
    def __init__(self,nombre,edad, centroEstudio):
        self.nombre        = nombre 
        self.edad          = edad
        self.centroEstudio = centroEstudio
        
    def conversar (self,otra_persona):
        return f'Hola {otra_persona.nombre} me llamo {self.nombre} y estudio en el {self.centroEstudio} mi edad es {self.edad} a√±os'  
    
if __name__=="__main__" :
    Persona1 = persona("Milton", 36, "YAVIRAC")
    Persona2 = persona("Gaby", 31, "POLITECNICA NACIONAL") 
    
    print(Persona1.conversar(Persona2))  
